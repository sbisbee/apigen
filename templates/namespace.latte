{layout '@layout.latte'}

{block #title}{$namespace} Package{/block}

{block #content}
<div id="navigation">
	<ul>
		<li><a href="overview.html" title="Summary of all packages">Overview</a></li>
		<li n:class="isset($namespace) ? active">Packages</li>
		<li>Class</li>
	</ul>
</div>

<div id="content">
	<h1>{ifset $namespace}{if $namespace != 'PHP'}{$namespace} Package{elseif $namespace}PHP{else}No namespace{/if}{else}All Classes{/ifset}</h1>

	{if}
	<table class="summary">
	<caption>Class summary</caption>
	{foreach $classes as $class}
	{continueIf $class->interface || $class->exception}
	<tr>
		<td width="20%"><a href="{$class|classLink}">{ifset $namespace}{$class->shortName}{else}{$class->name}{/ifset}</a></td>
		<td>{!$class->description|texyline}</td>
	</tr>
	{/foreach}
	</table>
	{/if $iterations}

	{if}
	<table class="summary">
	<caption>Interface summary</caption>
	{foreach $classes as $class}
	{continueIf !$class->interface}
	<tr>
		<td width="20%"><a href="{$class|classLink}">{ifset $namespace}{$class->shortName}{else}{$class->name}{/ifset}</a></td>
		<td>{!$class->description|texyline}</td>
	</tr>
	{/foreach}
	</table>
	{/if $iterations}

	{if}
	<table class="summary">
	<caption>Exception summary</caption>
	{foreach $classes as $class}
	{continueIf !$class->exception}
	<tr>
		<td width="20%"><a href="{$class|classLink}">{$class->shortName}</a></td>
		<td>{!$class->description|texyline}</td>
	</tr>
	{/foreach}
	</table>
	{/if $iterations}
</div>
{/block}
